    <html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport"
            content="width=device-width,
                    initial-scale=1.0">
        <title>Heath & Welness</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
     
        <style>
            th{
                min-width: calc(100%/3);
            }

        </style>
    </head>
    <body>
        <%- include('../components/component1.ejs')%>

            <div class="col py-3">
                <h2 style="padding-top: 20px;" class="display-4">Welcome to the Health And Managment</h2><br>
                <!-- <h2 class="display-6">Dashboard:</h2> -->

                 <% if(med[0]){%>
                <table class="table table-striped table-dark">
                    <thead>
                      <tr>
                        <th style="padding-left: 30px;" scope="col">No</th>
                        <th scope="col">Medicine Name</th>
                        <th scope="col">View:-</th>
                      </tr>
                    </thead>
                    <tbody>
                         <% med.forEach((ele,index)=> { %>
                            <tr>
                         <td style="padding-left: 30px;" > <%= index+1 %></td>
                        <td> <%= ele.medicine_name %></td>
                        <td>
                                
                                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#myModal<%= index+1 %>">
                                 More Details...
                                </button>
                              </div>
                              
                              <!-- The Modal -->
                              <div class="modal" id="myModal<%= index+1 %>">
                                <div class="modal-dialog modal-dialog-centered">
                                  <div class="modal-content">
                              
                                    <!-- Modal Header -->
                                    <div class="modal-header">
                                      <h4 style="color: black;" class="modal-title">Medicine Data</h4>
                                      <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                    </div>
                              
                                    <!-- Modal body -->
                                    <div class="modal-body" style="color: black;">
                                      
                                        <label for="desc">Description:-</label>
                                          <style></style> <%= ele.description%><br>
                                        <label for="type">Frequency:-</label>
                                        <%= ele.frequency%><br>
                                        <% if(ele.frequency=='weekly'){ %>
                                          <label for="type">Day:-</label>
                                          <%= ele.week_day%><br>
                                        <%} %>
                                        <label for="startdate">Start Date:-</label>
                                        <%= ele.start_date%><br>
                                        <label for="enddate">End Date:-</label>
                                        <%= ele.end_date%> <br>
                                      <label for="time">Time:-</label>
                                      <%= ele.time %>
                                    </div>
                              
                                    <!-- Modal footer -->
                                    <div class="modal-footer">
                                      <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Close</button>
                                    </div>
                              
                                  </div>
                                </div>
                              </div> 
                        </td> 
                      <tr>
                        <% }); %>
                    </tbody>
                  </table>
                  <% }else{%>
                    <h3 style="padding-top: 20px;" class="display-5">Currently you have no medicine to show so please Add Medicine via Menu</h3><br>

                    <p class="display-6">To add Medicine  Click Here <a href="/medicationone">One Time Medication</a>Or  <a href="/recurringmed"> Recurring Medication</a></p>
                    
                  <%}%>

                  
        </div>
</body>
</html>